<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgramDetailTitleCollapsed" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ProgramDetailTitleExpanded" parent="TextAppearance.AppCompat.Title">

        <item name="android:textColor">#00FFFFFF</item>
    </style>

    <style name="TVGuideButton">
        <item name="android:paddingLeft">@dimen/margin_medium_2</item>
        <item name="android:paddingRight">@dimen/margin_medium_2</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/text_white_ish</item>
    </style>

    <style name="PrimaryButton" parent="TVGuideButton">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AccentButton" parent="TVGuideButton">
        <item name="android:background">@color/accent_dark</item>
    </style>

    <style name="ProgramDescStyle">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
